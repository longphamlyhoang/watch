@model List<Category>
@{
    ViewData["Title"] = "Category";
}
<nav aria-label="breadcrumb" class="float-right">
    <ol class="breadcrumb has-arrow">
        <li class="breadcrumb-item">
            <a href="\">Category</a>
        </li>
    </ol>
</nav>
<a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="mdi mdi-library-plus"></i> Create</a>
<table class="table table-bordered table-hover table-striped ">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Category name</th>
            <th>Quantity Product</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category cat in Model)
        {
            <tr>
                <td>@cat.CategoryId</td>
                <td><i class="@cat.Picture">@cat.CategoryName</i></td>
                <td class="text-center"><a title="show product" class="btn btn-outline-info btn-sm" asp-controller="Product" asp-action="Index" asp-route-catId="@cat.CategoryId">@cat.Products.Count()</a></td>
                <td>
                    @if (cat.Status == true)
                    {
                        <div class="badge badge-success">Actice</div>
                    }
                    else
                    {
                        <div class="badge badge-warning">InActice</div>
                    }
                </td>
                <td class="text-right">
                    <a asp-controller="Category" asp-action="Edit" asp-route-catId="@cat.CategoryId" class="btn btn-info btn-sm">
                        <i class="mdi mdi-grease-pencil"></i>
                    </a>
                    @if (cat.Status)
                    {
                        <a asp-controller="Category" asp-action="ChangeStatus" asp-route-catId="@cat.CategoryId" class="btn btn-warning btn-sm" >
                            <i class="mdi mdi-lock"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Category" asp-action="ChangeStatus" asp-route-catId="@cat.CategoryId" class="btn btn-success btn-sm">
                            <i class="mdi mdi-lock"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
