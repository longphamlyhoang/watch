@model watchShop.Models.Product.DetailProduct

@{
    ViewData["Title"] = "Detail Product";
    var category = ViewBag.Category as watchShop.Entities.Category;
}

<nav aria-label="breadcrumb" class="float-right">
    <ol class="breadcrumb has-arrow">
        <li class="breadcrumb-item">
            <a href="\">Category</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Product" asp-action="Index" asp-route-id="@category.CategoryId">@category.CategoryName</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Product" asp-action="Detail">Detail @category.CategoryName</a>
        </li>
    </ol>
</nav>
<br />
<h3>Detail @category.CategoryName</h3>
<br />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TradeMark)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TradeMark)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Status" class="form-check-input" />
            <label asp-for="Status" class="form-check-label"></label>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PicturePath)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.PicturePath)" class="product_img-lg" />
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success text-white" asp-controller="Product" asp-action="Edit" asp-route-productId="@Model.ProductId">
        <i class="mdi mdi-grease-pencil"></i>
        Edit
    </a>
    <button data-target="#exampleModal" data-toggle="modal" type="button" class="btn btn-warning">
        <i class="mdi mdi-delete">Remove</i>
    </button>
    <a class="btn btn-dark float-right" asp-controller="Product" asp-action="Index" asp-route-catId="@category.CategoryId">
        <i class="mdi mdi-chevron-left"></i> Back
    </a>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Deleted @category.CategoryName</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark"   data-dismiss="modal"><i class="mdi mdi-export"></i> Close</button>
                <a type="button" class="btn btn-warning" asp-controller="Product" asp-action="Remove" asp-route-productId="@Model.ProductId"><i class="mdi mdi-delete"></i> Submit</a>
            </div>
        </div>
    </div>
</div>